<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1E1E0"
    tools:context=".main.mine.kefu.KefuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="#49B8C0">

        <LinearLayout
            android:id="@+id/kefu_back_btn"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Customer Service"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kefu_phone_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/login_edit_bg">
        <ImageView
            android:id="@+id/icon_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/icon_kefu"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/icon_kefu"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="Service tel"
                android:textColor="#ff1c1b1b"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/kefu_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800-258-3695"
                android:textColor="#ff1c1b1b"
                android:textSize="12sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/next"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kefu_mailbox_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/login_edit_bg">
        <ImageView
            android:id="@+id/you_xiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/youxiang"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/you_xiang"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="Service mailbox"
                android:textColor="#ff1c1b1b"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/kefu_mailbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX@outlook.com"
                android:textColor="#ff1c1b1b"
                android:textSize="12sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/next"/>
    </RelativeLayout>
</LinearLayout>