<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#E1E1E0"
    tools:context=".main.mine.us.AboutUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="#49B8C0">

        <LinearLayout
            android:id="@+id/us_back_btn"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="About us"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="18dp"
        android:background="@mipmap/ic_launcher_round"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="@string/app_name"
        android:textColor="#ff1051ae"
        android:textSize="12sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/us_check_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/login_edit_bg">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_version"
            android:drawablePadding="6dp"
            android:text="Version"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/us_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/us_red_point"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:visibility="gone"
            android:background="#FF6B6B"/>
        <ImageView
            android:id="@+id/us_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/next"/>
    </LinearLayout>
</LinearLayout>