<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.home.loan.verify.VerifyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="#49B8C0">

        <ImageView
            android:id="@+id/verify_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"/>
        <TextView
            android:id="@+id/verify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="PAN"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/verify_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ff333333"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/verify_step_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="/2"
            android:textColor="#ff999999"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/verify_step_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please go through the facial-recognition process."
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/verify_problem_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:drawableRight="@mipmap/ic_why"
        android:drawablePadding="6dp"
        android:text="Did you have a problem?"
        android:textColor="#ff206cf2"
        android:textSize="11sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#C1EBEE">
        <ImageView
            android:id="@+id/verify_card1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@mipmap/face"/>
        <TextView
            android:id="@+id/verify_step_tip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Please click on the picture for face or card recognition"
            android:textColor="#ff2c7e84"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/verify_card2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@mipmap/pan"/>
        <TextView
            android:id="@+id/verify_step_tip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Please click on the picture for face or card recognition"
            android:textColor="#ff2c7e84"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/verify_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="5dp"
        android:lineSpacingMultiplier="1.3"
        android:text="1. Ensure that all the documents uploaded are clear and not blurred."
        android:textColor="#ffd75e31"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/verify_next_btn"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/next_bg"
        android:text="NEXT"
        android:textColor="#ff6a640e"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>