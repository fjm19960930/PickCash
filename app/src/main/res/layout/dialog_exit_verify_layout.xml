<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/permission_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/verify_exit_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@mipmap/close_white"/>

    <TextView
        android:id="@+id/verify_exit_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.5dp"
        android:layout_marginHorizontal="20dp"
        android:text="You have 2 steps to getthe loan. Are you sureyou want to leave?"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/verify_exit_dialog_cancel"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/next_bg"
        android:gravity="center"
        android:text="Continue loan"
        android:textColor="#ff6a640e"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>