<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="*Please confirm your identity information \n incorrect information will cause the loan to fail!"
        android:textColor="#fff5981e"
        android:textSize="12sp"/>
    <LinearLayout
        android:id="@+id/confirm_a_card_front_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/confirm_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:gravity="right"
                android:hint="please enter name"
                android:maxLines="1"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Number"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/confirm_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:gravity="right"
                android:hint="please enter ID"
                android:maxLines="1"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/confirm_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:gravity="right"
                android:hint="please enter birth"
                android:maxLines="1"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/confirm_father_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father Name"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/confirm_father_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:gravity="right"
                android:hint="please enter father name"
                android:maxLines="1"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/confirm_gender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/confirm_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:gravity="right"
                android:hint="please enter gender"
                android:maxLines="1"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirm_a_card_back_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Aadhaar Address"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/confirm_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:hint="please enter name"
                android:maxLines="1"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/confirm_remake_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Remake"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/remake_bg"/>

    <TextView
        android:id="@+id/confirm_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Confirmed"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/permission_bg"/>
</LinearLayout>