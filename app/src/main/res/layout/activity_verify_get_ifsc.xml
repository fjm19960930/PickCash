<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#49B8C0"
    tools:context=".main.home.loan.verify.VerifyGetIfscActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="45dp"
        android:background="#49B8C0">

        <ImageView
            android:id="@+id/bank_ifsc_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Find IFSC"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/register_app_dialog_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="Bank State"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bank_state_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@mipmap/next_white"
            android:drawablePadding="10dp"
            android:text="Please choose"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:background="@drawable/register_app_dialog_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/register_app_dialog_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="Bank City"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bank_city_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@mipmap/next_white"
            android:drawablePadding="10dp"
            android:text="Please choose"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:background="@drawable/register_app_dialog_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/register_app_dialog_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="Bank Name"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bank_name_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@mipmap/next_white"
            android:drawablePadding="10dp"
            android:text="Please choose"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:background="@drawable/register_app_dialog_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/register_app_dialog_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="Bank Branch"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bank_branch_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@mipmap/next_white"
            android:drawablePadding="10dp"
            android:text="Please choose"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:background="@drawable/register_app_dialog_bg"/>
    </LinearLayout>
    <TextView
        android:id="@+id/bank_card_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="160dp"
        android:layout_gravity="right"
        android:background="@drawable/verify_get_ifsc_bg"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="#ff6a640e"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>