<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E6EA"
    tools:context=".main.privacy.PrivacyFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Privacy Agreement"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:overScrollMode="never"
        android:background="@drawable/privacy_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/permission_title"
                android:textColor="#8A4C4C"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.5dp"
                android:layout_marginBottom="10.5dp"
                android:text="Contact list and SMS information"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/permission_tip1"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10.5dp"
                android:text="Application"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/permission_tip2"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10.5dp"
                android:text="Device storage information"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/permission_tip3"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10.5dp"
                android:text="Camera permissions"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/permission_tip4"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10.5dp"
                android:text="Location Information"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/permission_tip5"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10.5dp"
                android:text="Storage"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/permission_tip6"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10.5dp"
                android:text="Authentication Information"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/permission_tip7"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10.5dp"
                android:text="Device, carrier and network information"
                android:textAppearance="@style/Privacy_title_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/permission_tip8"
                android:textAppearance="@style/Privacy_tip_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/permission_total"
                android:textAppearance="@style/Privacy_tip_style"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>